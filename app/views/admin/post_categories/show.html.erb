<div class="custom-hero">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <h1 class="hero-heading"><%= @post_category.name %></h1>
          <div  class="line js-line mx-auto mb-3 my-3"></div>
          <p class="sub-text">By Joefrey Mahusay <span class="mx-3">&bullet;</span> on <%= @post_category.created_at.strftime("%B %e, %Y") %> </p>
        </div>
      </div>
    </div>
  </div>

  <div class="site-section">
    <div class="container article">
      <div class="row justify-content-center align-items-stretch">

        <article class="col-lg-8 order-lg-2 px-lg-5">
          <p></p>

          <div class="pt-5 categories_tags ">
            <p>Category:  <a><%= @post_category.name %></a>,   Tags: <a href="#">#html</a>, <a href="#">#trends</a></p>
          </div>

          <div>
            
              <%= link_to 'Destroy', url_for([:admin, @post_category]), method: :delete, 
              data: {confirm: 'Are you sure?'}, class:"btn btn-primary btn-block" %>
           
       
              <%= link_to 'Update', edit_admin_post_category_path, class:"btn btn-primary btn-block" %>
          
          </div>

        </article>

        <div class="col-md-12 col-lg-1 order-lg-1">
          <div class="share sticky-top">
            <h3>Share</h3>
            <ul class="list-unstyled share-article">
              <li><a href="#"><span class="icon-facebook"></span></a></li>
              <li><a href="#"><span class="icon-twitter"></span></a></li>
              <li><a href="#"><span class="icon-pinterest"></span></a></li>
            </ul>
          </div>
        </div>
        <div class="col-lg-3 mb-5 mb-lg-0 order-lg-3">

          <div class="mb-4">
            <a>
              <span class="play-wrap"><span class="icon-play"></span></span>
              <% if @post_category.image.attached? %>
                 <%= image_tag(@post_category.image, alt:"Image", class:"img-fluid rounded") %>
              <% end %>
            </a>
          </div>  

          <div class="share floating-block sticky-top">

            <h2 class="mb-3 text-black">Subscribe to Newsletter</h2>
            <p>Far far away behind the word mountains far from.</p>
            <form action="#">
              <input type="email" class="form-control mb-2" placeholder="Enter email">
              <input type="submit" value="Subscribe" class="btn btn-primary btn-block">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
