
  <div class="custom-hero">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <h1 class="hero-heading"><%= @post_category.name %> Posts</h1>
          <div  class="line js-line mx-auto mb-3 my-3"></div>
          <p class="sub-text">Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
        </div>
      </div>
    </div>
  </div>

  
  <div class="section">
    <div class="container">
      <div class="row mb-5">


      <% @posts.each do |post| %> 
        <div class="col-md-6 mb-5 mb-lg-5 col-lg-4">
          <div class="blog_entry">
            <a href="single.html">
            <% if post.image.attached? %>
            <%= link_to image_tag(post.image, alt:"Free Website Template by Untree.co",class:"img-fluid"), post %>
            <% end %>
            </a>
            <div class="p-4 bg-white">
              <h3><a href="single.html"><%= post.title %></a></h3>
              <span class="date"><%= post.created_at.strftime("%B %e, %Y") %></span>
              <p><%= post.body %></p>
              <p class="more"><a><%= link_to 'Read more...', post %></a></p>
            </div>
          </div>
        </div>
       <% end %>
      
      </div>

      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="apple_pagination">
            <div class="page_info">
             <%= page_entries_info @posts %>
            </div>
            <%= will_paginate @posts, :container => false %>
          </div>
        </div>
      </div>
    </div>
  </div>

  
  

  